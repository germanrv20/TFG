<launch>
  <node pkg="robot_localization" type="navsat_transform_node" name="navsat_transformD1" output="screen" ns="/drone1">
    <param name="use_odometry_yaw" value="true"/>
    <param name="wait_for_datum" value="true"/>
    <param name="broadcast_cartesian_transform" value="false"/>
    <param name="publish_tf" value="true"/>
    <param name="base_link_frame" value="drone1/base_link"/>
    <param name="odom_frame" value="odom"/>
    <param name="map_frame" value="map"/>
    <param name="zero_altitude" value="true"/>

    <remap from="imu/data" to="/drone1/mavros/imu/data"/>
    <remap from="gps/fix" to="/drone1/mavros/global_position/global"/>
    <remap from="odometry/filtered" to="/drone1/mavros/odometry/out"/>
  </node>
</launch>

